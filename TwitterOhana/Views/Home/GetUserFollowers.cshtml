@using Tweetinvi.Models
@model  IEnumerable<TwitterOhana.Models.User>

<head>
    <link href="~/css/twittercard.css" rel="stylesheet">
</head>

<br/><br/><br /><br /><br /><br />
@for (int i = 0; i < Model.Count(); i++)
{
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <article class="card">
                    <img class="tumb" src=@Model.ElementAt(i).BackgroundImage>
                    <div class="info">
                        <div class="a">@Model.ElementAt(i).Name
                            <div>@Model.ElementAt(i).ScreenName</div>
                        </div>
                        <div class="a">@Model.ElementAt(i).StatusesCount
                            <div>Tweets</div>
                        </div>
                        <div class="b">@Model.ElementAt(i).FollowersCount
                            <div>Followers</div>
                        </div>
                        <div class="c">@Model.ElementAt(i).FriendsCount
                            <div>Friends</div>
                        </div>
                    </div>
                    <div class="btn">
                        <div class="follow icon-twitter">Follow</div>
                    </div>
                </article>
            </div>
        </div>
    </div>
}
